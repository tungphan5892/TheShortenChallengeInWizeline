<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/item_wrap_layout"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

    <FrameLayout
        android:layout_width="@dimen/tweet_recycler_image_size"
        android:layout_height="@dimen/tweet_recycler_image_size"
        android:layout_margin="@dimen/tweet_recycler_image_margin"
        android:background="@drawable/tweets_recycler_image_shape"
        android:padding="@dimen/tweet_recycler_image_padding"
        >

        <ImageView
            android:id="@+id/profile_image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/user_name_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/tweet_recycler_child_view_marginright"
            android:layout_marginTop="@dimen/tweet_recycler_child_view_margintop"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/default_string_at_user_name"
            />

        <TextView
            android:id="@+id/tweet_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/tweet_recycler_child_view_marginbottom"
            android:layout_marginRight="@dimen/tweet_recycler_child_view_marginright"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/default_string_tweet_content"
            android:textStyle="bold"
            />
    </LinearLayout>
</LinearLayout>